<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/inactive"
        android:drawable="@drawable/ic_text"
        android:state_activated="false"/>

    <item
        android:id="@+id/active"
        android:drawable="@drawable/ic_text_enter"
        android:state_activated="true"/>

    <transition
        android:drawable="@drawable/anim_text_to_enter"
        android:fromId="@+id/inactive"
        android:toId="@+id/active"/>

    <transition
        android:drawable="@drawable/anim_enter_to_text"
        android:fromId="@+id/active"
        android:toId="@+id/inactive"/>



</animated-selector>
