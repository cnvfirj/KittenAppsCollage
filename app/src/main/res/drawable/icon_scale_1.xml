<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/scale1"
        android:drawable="@drawable/ic_scale_plus"
        android:state_selected="false"/>

    <item
        android:id="@+id/scale2"
        android:drawable="@drawable/ic_scale_min"
        android:state_selected="true"/>

    <transition
        android:drawable="@drawable/anim_scale_pl_to_mi"
        android:fromId="@+id/scale1"
        android:toId="@+id/scale2"/>

</animated-selector>