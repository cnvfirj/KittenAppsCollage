<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/invert_out"
        android:drawable="@drawable/ic_invert_in"
        android:state_selected="true"/>

    <item
        android:id="@+id/invert_in"
        android:drawable="@drawable/ic_invert_out"
        android:state_selected="false"/>

    <transition
        android:drawable="@drawable/anim_invert_in"
        android:fromId="@+id/invert_out"
        android:toId="@+id/invert_in"/>

    <transition
        android:drawable="@drawable/anim_invert_out"
        android:fromId="@+id/invert_in"
        android:toId="@+id/invert_out"/>


</animated-selector>