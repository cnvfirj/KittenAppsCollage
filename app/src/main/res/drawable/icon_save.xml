<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/yes"
        android:drawable="@drawable/ic_arrow_bottom_left"
        android:state_selected="true"/>

    <item
        android:id="@+id/no"
        android:drawable="@drawable/ic_save"
        android:state_selected="false"/>

    <transition
        android:drawable="@drawable/anim_arrow_to_save"
        android:fromId="@id/yes"
        android:toId="@id/no"/>

    <transition
        android:drawable="@drawable/anim_save_to_arrow"
        android:fromId="@id/no"
        android:toId="@id/yes"/>

</animated-selector>