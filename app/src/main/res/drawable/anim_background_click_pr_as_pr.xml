<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="background"
                android:pathData="M -0.048 24.095 L -0.143 0 L 24.143 0 L 24.048 24.095 Z"
                android:fillColor="@color/colorPrimary"
                android:strokeWidth="0.1"/>
        </vector>
    </aapt:attr>
    <target android:name="background">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="fillColor"
                    android:duration="150"
                    android:valueFrom="@color/colorPrimary"
                    android:valueTo="@color/colorPrimaryDark"
                    android:valueType="colorType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="fillColor"
                    android:startOffset="150"
                    android:duration="150"
                    android:valueFrom="@color/colorPrimaryDark"
                    android:valueTo="@color/colorPrimary"
                    android:valueType="colorType"
                    android:interpolator="@android:anim/linear_interpolator"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
