<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/yes"
        android:drawable="@drawable/ic_arrow_bottom_right"
        android:state_selected="true" />

    <item
        android:id="@+id/no"
        android:drawable="@drawable/ic_add"
        android:state_selected="false"/>

    <transition
        android:drawable="@drawable/anim_arrow_to_add"
        android:fromId="@id/yes"
        android:toId="@id/no"/>

    <transition
        android:drawable="@drawable/anim_add_to_arrow"
        android:fromId="@id/no"
        android:toId="@id/yes"/>
</animated-selector>