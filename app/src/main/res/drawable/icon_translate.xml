<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
      android:id="@+id/inactive"
      android:drawable="@drawable/ic_touch"
      android:state_activated="false"/>

  <item
      android:id="@+id/active"
      android:drawable="@drawable/ic_all_arrows"
      android:state_activated="true"/>

  <transition
      android:drawable="@drawable/anim_touch_to_trans"
      android:fromId="@+id/inactive"
      android:toId="@+id/active"/>

  <transition
      android:drawable="@drawable/anim_trans_to_touch"
      android:fromId="@+id/active"
      android:toId="@+id/inactive"/>



</animated-selector>
