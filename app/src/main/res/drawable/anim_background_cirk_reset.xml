<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="path"
                android:pathData="M 0.118 12 C 0.118 5.438 5.438 0.118 12 0.118 C 18.562 0.118 23.882 5.438 23.882 12 C 23.882 18.562 18.562 23.882 12 23.882 C 5.438 23.882 0.118 18.562 0.118 12 Z"
                android:fillColor="@color/colorPrimary"
                android:strokeWidth="0.1"/>
        </vector>
    </aapt:attr>
    <target android:name="path">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="fillColor"
                    android:duration="150"
                    android:valueFrom="@color/colorPrimary"
                    android:valueTo="@color/colorPrimaryDark"
                    android:valueType="colorType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="fillColor"
                    android:startOffset="150"
                    android:duration="150"
                    android:valueFrom="@color/colorPrimaryDark"
                    android:valueTo="@color/colorPrimary"
                    android:valueType="colorType"
                    android:interpolator="@android:anim/linear_interpolator"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
