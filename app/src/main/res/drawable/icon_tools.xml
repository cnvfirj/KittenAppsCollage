<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/yes"
        android:drawable="@drawable/anim_tools_invisible"
        android:state_selected="true"/>

    <item
        android:id="@+id/no"
        android:drawable="@drawable/anim_tools_visible"
        android:state_selected="false"/>

    <transition
        android:drawable="@drawable/anim_tools_invisible"
        android:fromId="@id/yes"
        android:toId="@id/no"/>

    <transition
        android:drawable="@drawable/anim_tools_visible"
        android:fromId="@id/no"
        android:toId="@id/yes"/>
</animated-selector>