<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">


  <item
      android:id="@+id/set"
      android:drawable="@drawable/anim_mirror_set"
      android:state_selected="true"/>

  <item
      android:id="@+id/out"
      android:drawable="@drawable/anim_mirror_out"
      android:state_selected="false"/>

  <transition
      android:drawable="@drawable/anim_mirror_out"
      android:fromId="@id/set"
      android:toId="@id/out"/>

  <transition
      android:drawable="@drawable/anim_mirror_set"
      android:fromId="@id/out"
      android:toId="@id/set"/>

</animated-selector>
