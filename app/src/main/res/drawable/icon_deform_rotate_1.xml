<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/def1"
        android:drawable="@drawable/ic_rotation_image"
        android:state_selected="false"/>

    <item
        android:id="@+id/def2"
        android:drawable="@drawable/ic_deform_image"
        android:state_selected="true"/>

    <transition
        android:drawable="@drawable/anim_rot_to_def"
        android:fromId="@+id/def1"
        android:toId="@+id/def2"/>

</animated-selector>