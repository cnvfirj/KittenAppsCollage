<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/select"
        android:drawable="@drawable/ic_erase_step_2"
        android:state_selected="true"/>

    <item
        android:id="@+id/inselect"
        android:drawable="@drawable/ic_erase_step_1"
        android:state_selected="false"/>

    <transition
        android:fromId="@+id/inselect"
        android:toId="@+id/select"
        android:drawable="@drawable/anim_erase_1_to_2"/>
</animated-selector>