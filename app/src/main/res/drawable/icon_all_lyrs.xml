<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/yes"
        android:drawable="@drawable/ic_all_lyrs_on"
        android:state_activated="true"/>

    <item
        android:id="@+id/no"
        android:drawable="@drawable/ic_all_lyrs_off"
        android:state_activated="false"/>

    <transition
        android:drawable="@drawable/anim_off_all_lyr"
        android:fromId="@id/yes"
        android:toId="@id/no"/>

    <transition
        android:drawable="@drawable/anim_on_all_lyr"
        android:fromId="@id/no"
        android:toId="@id/yes"/>

</animated-selector>