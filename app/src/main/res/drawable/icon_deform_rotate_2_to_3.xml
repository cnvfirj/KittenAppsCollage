<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/def1"
        android:drawable="@drawable/ic_matrix_deform_image"
        android:state_selected="false"/>

    <item
        android:id="@+id/def2"
        android:drawable="@drawable/ic_matrix_reset_image"
        android:state_selected="true"/>

    <transition
        android:drawable="@drawable/anim_matrix_def_to_reset"
        android:fromId="@+id/def1"
        android:toId="@+id/def2"/>

</animated-selector>