<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
      android:id="@+id/select"
      android:drawable="@drawable/ic_brush_step_2"
      android:state_selected="true"/>

  <item
      android:id="@+id/inselect"
      android:drawable="@drawable/ic_brush_step_1"
      android:state_selected="false"/>

  <transition
      android:fromId="@+id/inselect"
      android:toId="@+id/select"
      android:drawable="@drawable/anim_brush_1_to_2"/>
</animated-selector>
