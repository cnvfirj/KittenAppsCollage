<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        style="@style/slide_style_all_tools"
        android:id="@+id/selected_collect_exit_mode"
        android:src="@drawable/icon_collect_selected_menu"
        android:background="@drawable/background_under_button_reset"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <ImageView
            style="@style/slide_style_all_tools"
            android:id="@+id/selected_collect_1"
            android:src="@drawable/ic_no_vision"
            android:background="@drawable/background_main_button_reset"/>


        <ImageView
            style="@style/slide_style_all_tools"
            android:id="@+id/selected_collect_3"
            android:src="@drawable/ic_share"
            android:background="@drawable/background_main_button_reset"/>

        <ImageView
            style="@style/slide_style_all_tools"
            android:id="@+id/selected_collect_4"
            android:src="@drawable/ic_delete"
            android:background="@drawable/background_main_button_reset"/>

    </LinearLayout>


</FrameLayout>