<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.kittenappscollage.view.CustomFon
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.kittenappscollage.view.PresentLyr
        android:id="@+id/dialog_add_present_lyr"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_add_progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_back"
        android:src="@drawable/ic_back"
        android:background="@drawable/background_buttons_add_lyr"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_save"
        android:layout_marginStart="@dimen/margin_save"/>

    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_apply"
        android:src="@drawable/ic_done"
        android:background="@drawable/background_buttons_add_lyr"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_save"/>

    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_close"
        android:src="@drawable/ic_close"
        android:background="@drawable/background_buttons_add_lyr"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_save"
        android:layout_marginEnd="@dimen/margin_save"/>

    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_mirror"
        android:src="@drawable/icon_mirror"
        android:background="@drawable/background_buttons_add_lyr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_save"/>


    <com.example.dynamikseekbar.DynamicSeekBar
        style="@style/buttons_dialog_add"
        android:layout_height="match_parent"
        android:id="@+id/dialog_seek_alpha"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_save"
        android:layout_marginTop="@dimen/margin_save"
        android:layout_marginBottom="@dimen/margin_seek"
        app:orientation="vertical"
        app:visible_text="true"
        app:text_size="18"
        app:visible_buttons="true"
        app:color_content="@color/colorWhite"
        app:color_progress="@color/colorPrimary"
        app:color_mark="@color/colorPrimary"
        app:revers_text="true"
        app:direct="back"
        app:drw_b1="@drawable/ic_add"
        app:drw_b2="@drawable/ic_remove"
        app:color_way="@color/colorAccent"/>

    <com.example.dynamikseekbar.DynamicSeekBar
        style="@style/buttons_dialog_add"
        android:layout_height="match_parent"
        android:id="@+id/dialog_seek_scale"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_save"
        android:layout_marginStart="@dimen/margin_save"
        android:layout_marginBottom="@dimen/margin_seek"
        app:orientation="vertical"
        app:visible_text="true"
        app:text_size="18"
        app:visible_buttons="true"
        app:color_content="@color/colorWhite"
        app:color_progress="@color/colorPrimary"
        app:color_mark="@color/colorPrimary"
        app:revers_text="true"
        app:direct="back"
        app:drw_b1="@drawable/ic_add"
        app:drw_b2="@drawable/ic_remove"
        app:color_way="@color/colorAccent"/>


















</RelativeLayout>