<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.kittenappscollage.view.CustomFon
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.kittenappscollage.view.PresentLyr
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/present_lyr"/>


    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_back"
        android:src="@drawable/icon_back"
        android:background="@drawable/background_main_button_reset"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_save"
        android:layout_marginStart="@dimen/margin_save"/>

    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_apply"
        android:src="@drawable/icon_done"
        android:background="@drawable/background_main_button_reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_save"/>

    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_close"
        android:src="@drawable/icon_close"
        android:background="@drawable/background_main_button_reset"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_save"
        android:layout_marginEnd="@dimen/margin_save"/>

    <ImageView
        style="@style/buttons_dialog_add"
        android:id="@+id/dialog_mirror"
        android:src="@drawable/icon_mirror"
        android:background="@drawable/background_main_button_reset"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_save"/>



</RelativeLayout>