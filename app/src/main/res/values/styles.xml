<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="common_style_tools">
        <item name="android:layout_width">@dimen/param_tools</item>
        <item name="android:layout_height">@dimen/param_tools</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">@dimen/margin_tool</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="common_style_save">
        <item name="android:layout_width">@dimen/param_save</item>
        <item name="android:layout_height">@dimen/param_save</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_save</item>
        <item name="android:layout_marginTop">@dimen/margin_save</item>
        <item name="android:layout_marginLeft">@dimen/margin_save</item>
    </style>



</resources>
