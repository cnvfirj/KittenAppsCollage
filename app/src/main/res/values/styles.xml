<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DialogAddLyr" parent="Base.Theme.AppCompat.Dialog.FixedSize">
        <item name="windowFixedWidthMajor">@dimen/width_window_major_add_bitmap</item>
        <item name="windowFixedWidthMinor">@dimen/width_window_minor_add_bitmap</item>
        <item name="windowFixedHeightMajor">@dimen/height_window_major_add_bitmap</item>
        <item name="windowFixedHeightMinor">@dimen/height_window_minor_add_bitmap</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>



    <style name="imgs_lock">
        <item name="android:layout_width">@dimen/param_lock</item>
        <item name="android:layout_height">@dimen/param_lock</item>
        <item name="android:layout_marginLeft">@dimen/margin_tool</item>
    </style>

    <style name="common_style_tools" parent="Clickable">
        <item name="android:layout_width">@dimen/param_tools</item>
        <item name="android:layout_height">@dimen/param_tools</item>
        <item name="android:layout_marginTop">@dimen/margin_tool</item>
        <item name="android:layout_weight">1</item>


    </style>



    <style name="buttons_dialog_add">
        <item name="android:layout_width">@dimen/param_save</item>
        <item name="android:layout_height">@dimen/param_save</item>
    </style>

    <style name="dialog_add_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dialog_add_text_size</item>
        <item name="android:layout_margin">@dimen/margin_save</item>
        <!--<item name="android:background">@color/colorAccentTransparent</item>-->
    </style>

    <style name="dialog_add_seek_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/margin_seek_dialog_add</item>
        <item name="android:layout_marginStart">@dimen/margin_seek_dialog_add</item>
        <item name="android:layout_marginTop">@dimen/margin_save</item>
        <item name="android:layout_marginBottom">@dimen/margin_save</item>

    </style>


    <style name="margin_all">
        <item name="android:layout_marginBottom">@dimen/margin_save</item>
        <item name="android:layout_marginTop">@dimen/margin_save</item>
        <item name="android:layout_marginLeft">@dimen/margin_save</item>
        <item name="android:layout_marginRight">@dimen/margin_save</item>
    </style>

    <style name="common_buttons" parent="Clickable">
        <item name="android:layout_width">@dimen/param_save</item>
        <item name="android:layout_height">@dimen/param_save</item>
        <item name="android:layout_marginBottom">@dimen/margin_save</item>
        <item name="android:layout_marginTop">@dimen/margin_save</item>
        <item name="android:layout_marginLeft">@dimen/margin_save</item>
        <item name="android:layout_marginRight">@dimen/margin_save</item>
    </style>

    <style name="buttons_arrows" parent="Clickable">
        <item name="android:layout_width">@dimen/param_save</item>
        <item name="android:layout_height">@dimen/param_save</item>
        <item name="android:layout_marginTop">@dimen/margin_save</item>
        <item name="android:layout_marginBottom">@dimen/margin_save</item>

    </style>


    <style name="slide_style_save" parent="common_buttons" >
        <item name="android:layout_gravity">bottom|left</item>
    </style>

     <style name="slide_style_add_img" parent="common_buttons">
         <item name="android:layout_gravity">bottom|right</item>

    </style>

    <style name="slide_style_all_tools" parent="common_buttons">
        <item name="android:layout_gravity">top|left</item>
    </style>





</resources>
